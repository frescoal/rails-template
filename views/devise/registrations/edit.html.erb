<div class="header pb-6">
  <div class="container-fluid">
    <div class="header-body">
      <div class="row align-items-center py-4">
        <h6 class="h2 d-inline-block mb-0">Hello ! <%= current_user.email %></h6>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid mt--6">
  <div class="card">
    <div class="card-header">
      <div class="row align-items-center">
        <div class="col-8">
          <h3 class="mb-0">Edit profile</h3>
        </div>
        <div class="col-4 text-right">
          <%= link_to t('.cancel_account'), registration_path(resource_name), data: {confirm_swal: t('confirm.destroy.title'), confirm_button: t('confirm.destroy.confirm'), cancel_button: t('confirm.destroy.cancel')}, class: 'btn btn-sm btn-danger', method: :delete %>
        </div>
      </div>
    </div>
    <div class="card-body">
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <h6 class="heading-small text-muted mb-4">Connection information</h6>
        <div class="pl-lg-4">
          <div class="row">
            <div class="col">
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <p><%= t('.waiting_confirmation') %>: <%= resource.unconfirmed_email %></p>
              <% end %>
            </div>
          </div>
          <div class="row">
            <div class="col">
              <%= f.input :email, autofocus: true %>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-6">
              <%= f.input :password, hint: t('.leave_it_blank') %>
            </div>
            <div class="col-lg-6">
              <%= f.input :password_confirmation %>
            </div>
            <div class="col-lg-12">
              <%= f.input :current_password, hint: t('.apply_change') %>
            </div>
          </div>
          <%= f.button :submit, t('save'), class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
